<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:weightSum="6">


    <it.frisoni.pabich.csenpoomsaescore.widgets._AutoResizeTextView
        android:id="@+id/txt_title"
        android:layout_weight="4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/text_white"
        android:textSize="85sp" />

    <LinearLayout
        android:id="@+id/lnl_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <it.frisoni.pabich.csenpoomsaescore.widgets.CenteredIconButton
            android:id="@+id/btn_start"
            style="@style/medium_button_text"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawablePadding="15dp"
            android:drawableTop="@drawable/start"
            android:text="@string/start"/>

        <it.frisoni.pabich.csenpoomsaescore.widgets.CenteredIconButton
            android:id="@+id/btn_list"
            style="@style/medium_button_text"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawablePadding="15dp"
            android:drawableTop="@drawable/scores"
            android:text="@string/scores" />

        <it.frisoni.pabich.csenpoomsaescore.widgets.CenteredIconButton
            android:id="@+id/btn_settings"
            style="@style/medium_button_text"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/settings"
            android:text="@string/settings" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/taekw_logo"
            android:contentDescription="@string/small_logo"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/taekw_text_logo"
            android:contentDescription="@string/small_logo"/>
        />
    </LinearLayout>


</LinearLayout>
