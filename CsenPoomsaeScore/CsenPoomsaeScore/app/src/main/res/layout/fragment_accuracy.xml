<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/lnl_logos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="Logo CSEN"
            android:padding="10dp"
            android:src="@drawable/taekw_logo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="Logo TAEKWONDOO CSEN"
            android:padding="10dp"
            android:src="@drawable/taekw_text_logo" />
        />
    </LinearLayout>

    <LinearLayout
        android:padding="10sp"
        android:id="@+id/lnl_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lnl_logos"
        android:orientation="vertical"
        android:weightSum="5"
        android:layout_below="@+id/txv_counter">

        <LinearLayout
            android:id="@+id/lnl_big_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_add_big_penalty"
                style="@style/big_button_text"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/red_button_background"
                android:gravity="center"
                android:text="- 0,1" />

            <Button
                android:id="@+id/btn_add_small_penalty"
                style="@style/big_button_text"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/blue_button_background"
                android:gravity="center"
                android:text="- 0,3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnl_small_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_remove_big_penalty"
                style="@style/medium_button_text"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gray_button_background"
                android:gravity="center"
                android:text="- 0,1" />

            <Button
                android:id="@+id/btn_remove_small_penalty"
                style="@style/medium_button_text"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gray_button_background"
                android:gravity="center"
                android:text="- 0,3" />
        </LinearLayout>
    </LinearLayout>


    <com.lb.auto_fit_textview.AutoResizeTextView
        android:id="@+id/txv_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.0"
        android:textSize="60dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />


</RelativeLayout>