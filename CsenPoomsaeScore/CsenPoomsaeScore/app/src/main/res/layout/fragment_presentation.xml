                        android:layout_centerInParent="true"
                        android:text="@string/strength_pace"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
