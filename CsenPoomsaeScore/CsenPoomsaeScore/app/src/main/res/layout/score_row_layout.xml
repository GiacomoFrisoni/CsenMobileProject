<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/number"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="255"
        android:textColor="@color/gray"
        android:textSize="25sp"/>

    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/rtl_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/number">

        <TextView
            android:id="@+id/txv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09/04/2017"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txv_date"
            android:text="12:59"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/rtl_points"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rtl_date">

        <TextView
            android:id="@+id/txv_accuracy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accuratezza: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txv_accuracy"
            android:layout_toRightOf="@id/txv_accuracy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.0"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txv_presentation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txv_accuracy"
            android:text="Presentazione: "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txv_presentation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txv_presentation_title"
            android:layout_below="@id/txv_accuracy"
            android:text="5.6"
            android:textSize="15sp" />
    </RelativeLayout>

    <com.lb.auto_fit_textview.AutoResizeTextView
        android:layout_weight="1"
        android:id="@+id/txv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rtl_points"
        android:layout_toRightOf="@id/rtl_points"
        android:text="5.2"
        android:gravity="right"
        android:layout_marginRight="5dp"
        android:textColor="@color/gray"
        android:textSize="40sp" />

</LinearLayout>