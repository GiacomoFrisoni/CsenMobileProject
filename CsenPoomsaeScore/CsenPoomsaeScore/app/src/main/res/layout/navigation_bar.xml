<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2F2F2F">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rlt_title"
        android:layout_alignBottom="@id/rlt_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/nav_button_background"
        android:drawableStart="@drawable/back"
        android:drawableLeft="@drawable/back"
        android:gravity="center"
        android:paddingRight="15dp"
        android:text="@string/menu"
        android:textColor="@color/text_white" />


    <Button
        android:id="@+id/btn_forward"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rlt_title"
        android:layout_alignBottom="@id/rlt_title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/nav_button_background"
        android:drawableEnd="@drawable/forward"
        android:drawableRight="@drawable/forward"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:text="@string/presentation"
        android:textColor="@color/text_white" />

    <RelativeLayout
        android:id="@+id/rlt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:id="@+id/txv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/results"
            android:textColor="@color/text_white"
            android:textSize="@dimen/title_size" />

        <TextView
            android:id="@+id/txv_nav_bar_tablet_connection_status"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/txv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-5dp"
            android:drawableStart="@drawable/ic_wifi_off"
            android:drawableLeft="@drawable/ic_wifi_off"
            android:drawablePadding="10dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:text="@string/tablet_not_connected"
            android:textColor="@color/text_white"
            android:textSize="@dimen/title_size" />

    </RelativeLayout>


</RelativeLayout>


