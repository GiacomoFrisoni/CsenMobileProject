<resources>

    <!-- Tema di base per l'applicazione -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="menu_button">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/menu_button_background</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <!-- Stile per i bottoni di media dimensione -->
    <style name="medium_button_text">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">26dp</item>
        <item name="android:shadowColor">@color/button_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">@drawable/gray_button_background</item>
    </style>

    <!-- Stile per i bottini di grande dimensione -->
    <style name="big_button_text">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">56dp</item>
        <item name="android:shadowColor">@color/button_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
</resources>
